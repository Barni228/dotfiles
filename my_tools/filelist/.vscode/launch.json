  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'filelist'",
      "cargo": {
        "args": ["build", "--bin=filelist", "--package=filelist"],
        "filter": {
          "name": "filelist",
          "kind": "bin"
        }
      },
      // args that will be given to my program
      "args": ["test_files"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'filelist'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=filelist", "--package=filelist"],
        "filter": {
          "name": "filelist",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration tests",
      "cargo": {
        "args": ["test", "--no-run", "--package=filelist"],
        "filter": {
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
