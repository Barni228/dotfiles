// Place your key bindings in this file to override the defaults
[
  // accept only one line of suggestion
  {
    "key": "shift+tab",
    "command": "editor.action.inlineSuggest.acceptNextLine",
    "when": "inlineSuggestionVisible && !editorReadonly"
  },
  // my custom commands
  {
    "key": "ctrl+;",
    "command": "extension.multiCommand.execute"
  },
  // miximise terminal panel
  {
    "key": "shift+cmd+j",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "panelFocus"
  },
  //#region voil shortcuts (oil.nvim)
  {
    "key": "-",
    "command": "voil.openPanelCurrentDir",
    "when": "!voilDoc && vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "-",
    "command": "voil.gotoParentDir",
    "when": "voilDoc && vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "-",
    "command": "voil.openPanelCurrentDir",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "-",
    "command": "voil.openPanel",
    "when": "inWelcome && !inputFocus"
  },
  //#endregion
  //#region delete shortcuts
  //#region delete some markdown shortcuts
  {
    "key": "cmd+b",
    "command": "-markdown.extension.editing.toggleBold",
    "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },
  {
    "key": "cmd+i",
    "command": "-markdown.extension.editing.toggleItalic",
    "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },
  //#endregion
  //#region delete some bookmark shortcuts
  {
    "key": "alt+cmd+l",
    "command": "-bookmarks.jumpToNext",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+cmd+j",
    "command": "-bookmarks.jumpToPrevious",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+cmd+k",
    "command": "-bookmarks.toggle",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+x",
    "command": "workbench.action.closeEditorsInOtherGroups"
  },
  {
    "key": "alt+d",
    "command": "codeium.diffActionReject",
    "when": "editorTextFocus && !inlineSuggestionsVisible"
  },
  {
    "key": "alt+r",
    "command": "-codeium.diffActionReject",
    "when": "editorTextFocus && !inlineSuggestionsVisible"
  }
  //#endregion
  //#endregion
]
